function backup {
	fname="Valheim-`date +%F`"
	
	sudo systemctl stop valheimserver.service && \
	cp -r /home/steam/.config/unity3d/IronGate/Valheim /home/adam/valheim-backups/$fname && \
	sudo systemctl start valheimserver.service && \
	echo "Successfully backed up!"
}


function update {
	sudo systemctl stop valheimserver.service && \
	/home/steam/.steam/steamcmd/steamcmd.sh +login anonymous +app_update 896660 validate +exit
	sudo systemctl start valheimserver.service && \
	echo "Successfully updated!"
}

